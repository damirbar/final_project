<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/user_selected</item>
        <item name="colorPrimaryDark">@color/user_selected</item>
        <item name="colorAccent">@color/default_circle_indicator_page_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/chat_me_window_background</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.LoginRegister" parent="AppTheme">
    </style>

    <style name="intercom_floating_action_button_style">
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
    </style>

    <style name="intercom_toolbar_style">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/intercom_toolbar_height</item>
        <item name="contentInsetStart">0.0dip</item>
        <item name="contentInsetEnd">0.0dip</item>
        <item name="contentInsetLeft">0.0dip</item>
        <item name="contentInsetRight">0.0dip</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/user_selected</item>
        <item name="colorPrimaryDark">@color/user_selected</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="windowNoTitle">true</item>

    </style>




</resources>
