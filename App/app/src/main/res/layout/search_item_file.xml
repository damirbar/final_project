<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/white"
    card_view:cardElevation="@dimen/box_space"
    card_view:cardUseCompatPadding="true"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/feed_item_menu"
            android:layout_width="48.0dip"
            android:layout_height="36.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2.0dip"
            android:background="@null"
            android:focusable="false"
            android:rotation="90"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/file_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_image"
            android:layout_toStartOf="@+id/feed_item_menu"
            android:padding="5dp"
            android:rotation="270"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:visibility="gone"
            app:siBorderColor="#cccccc"
            app:siBorderWidth="2dp"
            android:layout_toLeftOf="@+id/feed_item_menu" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/padding8"
            android:layout_marginStart="@dimen/padding8"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:focusable="false"
            android:padding="5dp"
            android:src="@drawable/ic_add_file_48dp"
            app:siBorderColor="#cccccc"
            app:siBorderWidth="2dp" />

        <LinearLayout
            android:id="@+id/author_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="10.0dip"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="10.0dip"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/user_image"
            android:layout_toRightOf="@id/user_image"
            android:descendantFocusability="blocksDescendants"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="190.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="start"
                android:maxLines="2"
                android:text="file"
                android:textAlignment="viewStart"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/subhead_size" />

            <TextView
                android:id="@+id/creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="3/3/18"
                android:textColor="@color/secondary_post_text"
                android:textSize="@dimen/caption_size" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <Button
                    android:id="@+id/buttonStart"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="51dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:text="open"
                    android:textColor="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:progressTint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textViewProgress"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:textAlignment="center" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>