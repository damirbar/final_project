<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView_poster"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView_poster"
        android:gravity="top"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:fontFamily="@font/belgrano" />

    <TextView
        android:id="@+id/textView_msg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_msg1"
        android:layout_toLeftOf="@+id/imageView_poster"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView_poster"
        android:gravity="top"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:fontFamily="@font/belgrano" />

    <ImageView
        android:id="@+id/imageView_poster"
        android:layout_width="47dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>