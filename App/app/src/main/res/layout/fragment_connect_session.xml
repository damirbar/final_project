<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ariel.wizer.fragments.SideMenuFragment">

    <TextView
        android:id="@+id/class_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:gravity="center"
        android:text="Class Pin"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tiClasPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_name_text"
        android:backgroundTint="@color/white"
        android:textAlignment="center">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etClas_Pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:hint="PIN"
            android:numeric="integer"
            android:phoneNumber="false"
            android:textAlignment="center" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/classloginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tiClasPin"
        android:layout_centerHorizontal="true"
        android:background="#4867a0"
        android:shadowColor="@color/white"
        android:text="Enter"
        android:textColor="?android:attr/colorControlActivated"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white" />

</RelativeLayout>
