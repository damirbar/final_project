<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ariel.wizeup">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        tools:replace="android:supportsRtl"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="wizeup"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".entry.EntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".profile.EditProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".imageCrop.ImageCropActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.PostActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".session.CommentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.SessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".base.BaseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.ConnectSessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".TermsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".profile.ProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.CourseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.MyCourseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.CreateSessionActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".profile.BioActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".search.SearchActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".course.CreateCourseActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".settings.SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".settings.ChangePasswordActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".settings.FeedbackActivity"
            android:configChanges="orientation|screenSize" />

    </application>

</manifest>