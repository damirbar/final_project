<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ariel.wizer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="wizeup"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <service android:name=".demo.DownloadService" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".EditProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".imageCrop.ImageCropActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.PostActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".session.CommentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.SessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".BaseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.ConnectSessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".TermsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".ProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.CourseTabActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".course.MyCourseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".demo.FileDownActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".demo.FileUploadActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".session.CreateSessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".BioActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".SearchActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>